<Hds::Card::Container @level="mid" @hasBorder={{true}}>
  <form {{on "submit" this.handleSubmit}}>
    <Hds::Form::TextInput::Field
      name="pet-name"
      value={{this.name}}
      {{on "input" (pick "target.value" (set this "name"))}}
      as |F|
    >
      <F.Label>Name</F.Label>
    </Hds::Form::TextInput::Field>
    <Hds::Form::TextInput::Field
      @type="date"
      name="pet-birthday"
      value={{this.dob}}
      {{on "input" (pick "target.value" (set this "dob"))}}
      as |F|
    >
      <F.Label>Date of birth</F.Label>
    </Hds::Form::TextInput::Field>
    <Hds::Form::Radio::Group
      @layout="horizontal"
      @name="pet-species"
      value={{this.species}}
      as |G|
    >
      <G.Legend>Species</G.Legend>
      <G.RadioField
        value="dog"
        {{on "change" (pick "target.value" (set this "species"))}}
        as |F|
      >
        <F.Label>Dog</F.Label>
      </G.RadioField>
      <G.RadioField
        value="cat"
        {{on "change" (pick "target.value" (set this "species"))}}
        as |F|
      >
        <F.Label>Cat</F.Label>
      </G.RadioField>
    </Hds::Form::Radio::Group>
    <Hds::Button @text="Save" type="submit" />
  </form>
</Hds::Card::Container>